<!-- res/drawable/bottom_corner_twist.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Rectangle at the top -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/black" /> <!-- Change color as needed -->
    </shape>
  </item>

  <!-- Wavy pattern at the bottom corner -->
  <item android:right="2dp" android:bottom="40dp">
    <rotate
        android:fromDegrees="10"
        android:pivotX="100%"
        android:pivotY="100%">
      <shape android:shape="rectangle">
        <solid android:color="@color/white" /> <!-- Change color as needed -->
      </shape>
    </rotate>
  </item>
</layer-list>