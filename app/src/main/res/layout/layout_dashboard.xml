<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/layout_titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_person" />
        <TextView
            android:id="@+id/dashboard_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/logo_person"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="22dp"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_settings_24" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_titleTv">

        <TextView
android:id="@+id/beach_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"

            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Beach"
            android:textColor="#8f8e8e"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/place_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"

android:layout_below="@+id/beach_textview"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="27 places"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beach_textview"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_locations"/>
        <ImageView
            android:id="@+id/cyle_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_fires"
            android:layout_below="@id/place_textview"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/fire_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_cycles"
            android:layout_below="@id/cyle_button"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/done_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_thumbs"
            android:layout_below="@id/fire_button"
            android:layout_marginBottom="10dp"/>
        <HorizontalScrollView
            android:id="@+id/place_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_textview"
            android:layout_toRightOf="@+id/cyle_button"
            >
            <LinearLayout
                android:id="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_weight="3"

                android:orientation="horizontal">






                <ImageView
                    android:id="@+id/top_up_button"
                    android:layout_width="112dp"
                    android:layout_height="300dp"



                    android:src="@drawable/ic_india"
                    android:textStyle="bold" />
<RelativeLayout
    android:id="@+id/layout_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/data_button"
        android:layout_width="112dp"
        android:layout_height="300dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"

        android:src="@drawable/ic_cambodia"
        android:textColor="@color/white"
        android:textStyle="bold" />
    </RelativeLayout>
                <ImageView
                    android:id="@+id/bundle_button"
                    android:layout_width="112dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="5dp"


                    android:src="@drawable/ic_thailand"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/flexi_button"
                    android:layout_width="112dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="5dp"

                    android:src="@drawable/ic_india"
                    android:text="Flexi"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />


            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/vist_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_scroll"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Engage with similar-minded wanderers"
            android:textColor="#8f8e8e"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_personimages"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/vist_textview"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_below="@+id/vist_textview">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_persona"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_personc"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_personb"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_persond"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>