<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_common_background">
    <RelativeLayout
        android:id="@+id/layout_survrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_survey">
        <TextView
            android:id="@+id/survey_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Survey"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:text="Complete this survey to unlock personalized travel packages tailored just for you

" android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/survey_TextView"
            android:layout_marginBottom="30dp"
            android:textColor="#8f8e8e"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_Q1"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_below="@+id/layout_survrey"
        android:background="@drawable/layout_background_aboutus"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/Q1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8f8e8e"
            android:text="Q8"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/Q1e_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Q1_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="How would you like to travel in your destination?"
            android:textSize="29sp" />
        <RelativeLayout
            android:layout_below="@+id/Q1e_textview"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/layout_edittext"
            >
            <View
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@color/black"

                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_Q1">
    <Button
        android:id="@+id/button1"
        android:layout_width="125dp"
        android:layout_height="45dp"

        android:text="Taxi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/layout_white_background"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button1"
        android:layout_marginTop="20dp"
        android:text="Bus"
        android:background="@drawable/layout_white_background"
        android:layout_marginLeft="40dp"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="125dp"
        android:layout_height="45dp"

        android:text="Rented Car"
        android:layout_marginLeft="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/layout_white_background"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button3"
        android:text="Train/Metro"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/layout_white_background"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button2"
        android:layout_marginTop="20dp"
        android:text="2-3 weeks"
        android:layout_marginLeft="40dp"
        android:visibility="invisible"
        android:background="@drawable/layout_white_background"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button4"
        android:text="1+Months"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:visibility="invisible"

        android:background="@drawable/layout_white_background"/>
    </RelativeLayout>
</RelativeLayout>