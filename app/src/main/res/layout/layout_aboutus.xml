<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4d3d3"
    android:id="@+id/layout_home"
    >

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/layout_background_aboutus">

        <RelativeLayout
             android:id="@+id/layout_Explore"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_titleTv"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/layout_about_us">

                <Button
                    android:id="@+id/id_backbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" android:background="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/titletv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_backbutton"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Explore Sphere"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/textView_I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="i"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"

                    android:textSize="32sp" />
            </RelativeLayout>
<TextView
    android:id="@+id/learn_TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_titleTv"
    android:textStyle="bold"
    android:text="Learn more about us!"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:textSize="18sp"
    />
            <TextView
                android:id="@+id/explore_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learn_TextView"
                android:textStyle="bold"
                android:text="ExploreSphere"

                android:layout_centerHorizontal="true"
                android:textSize="42sp"
                />
            <TextView
                android:id="@+id/explain_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/explore_TextView"

                android:text="Your Personal travel compaion guiding you through every step from booking to exploring! "
android:gravity="center"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/explain_TextView"


                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"


                android:background="@drawable/ic_company_image" />

            <ImageView
                android:id="@+id/image_sphere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/explain_TextView"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_logo"
                android:background="@drawable/ic_sphere" />
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/image_logo"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:background="@drawable/layout_button"
                android:text="LogIn"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/signIn_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/login_button"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:text="Link Info"
                android:background="@drawable/layout_button"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>